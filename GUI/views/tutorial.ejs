<!DOCTYPE html>
<html>
<head>
<style>
table, td {
  border: 1px solid black;
}
</style>
</head>
<body>

<p>Click the buttons to create and delete row(s) for the table.</p>


<FORM METHOD="POST" ACTION="/tutorial">
  <table id="myTable">
    <tr>
      <td>Row1 cell1</td>
      <td>Row1 cell2</td>
    </tr>
    <tr>
      <td>Row2 cell1</td>
      <td>Row2 cell2</td>
    </tr>
  </table>
<P><INPUT TYPE="SUBMIT" VALUE="Submit" NAME="B1"></P>
</FORM>

<button onclick="myCreateFunction()">Create row</button>
<button onclick="myDeleteFunction()">Delete row</button>

<script>
function CreateCell(rowindex, cellindex, table) {

  var cell = table.rows[rowindex].insertCell(cellindex);
  cell.innerHTML = '';
  var input = document.createElement('input');
  var text = "NEW CELL" + String(cellindex);
  input.type = "text";
  input.value = text;
  cell.appendChild(input);
}
function myCreateFunction() {
  var table = document.getElementById("myTable");
  var row = table.insertRow(table.rows.length);

  for (var i = 0; i < table.rows.length; i++) { //to add cells to the previous rows for square matrix
    if (i < table.rows.length - 1) {
    CreateCell(i, table.rows.length - 1, table);
  }
  CreateCell(table.rows.length - 1, i, table);

  }
}

function myDeleteFunction() {
  table = document.getElementById("myTable");
  table.deleteRow(table.rows.length - 1);
  for (var i = 0; i < table.rows.length; i++) {
    table.rows[i].deleteCell(table.rows.length);
  }
}
</script>

</body>
</html>
